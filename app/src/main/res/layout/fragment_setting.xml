<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="28dp">

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/setting_switch_biometric"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:contentDescription="@string/biometric_setting"
        android:text="@string/biometric_setting"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/setting_btn_logout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/shadowRed"
        android:text="@string/logout"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/setting_switch_biometric" />

</androidx.constraintlayout.widget.ConstraintLayout>